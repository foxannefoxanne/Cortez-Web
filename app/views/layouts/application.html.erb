<!DOCTYPE html>
<html>
  <head>
    <title><%=yield(:title)%> Cortez</title>
    <%= stylesheet_link_tag    'application', media: 'all', 
                                              'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    
    <%= render 'layouts/shim' %>
    
  </head>
  <body>
    <!-- Renders Header - /app/views/layouts/_header.html.erb -->
    <%= render 'layouts/header' %>
    
    <div class="container">
      <!-- Renders Flash Messages Site-Wide -->
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>

      <!-- Yeilds Page Rendering to Given Page - /app/views/. -->
      <%= yield %>

      <!-- Renders Footer - /app/views/layouts/_footer.html.erb -->
      <%= render 'layouts/footer'%>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
